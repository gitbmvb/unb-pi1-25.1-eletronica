    delay(5); // Espa√ßo entre envios
  }
  SerialBT.println("{\"fim\":true}"); // Finaliza o envio
  Serial.println("Dados enviados! Total: " + String(totalDados) + " registros.");
  totalDados = 0; // Reseta o contador
}